    "outDir": "dist",
    "declarationDir": "dist",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2020",
    "lib": [ "es2020", "DOM" ],
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./**/*"
  ],
